    <%= render partial: "tweets/header" %>
    <div class="middle-content">
      <%= render partial: "tweets/sidebar" %>
      <div class="main">
        <h1>新規チャットルーム</h1>
          <%= form_with url: "/user/:#{@user.id}/chat_room", method: :post, local: true do |form| %>
            <%= form.text_field :room_name, placeholder: "研究テーマ名を記入してください" %>
            <%= form.submit "チャットルーム作成" %>
            <input name="chat_room[user_ids][]" type="hidden" value=<%= current_user.id %>>
            <input name="chat_room[user_ids][]" type="hidden" value=<%= @user.id %>>
          <% end %>
      </div>
    </div>
    <%= render partial: "tweets/footer" %>